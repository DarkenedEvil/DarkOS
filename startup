os.pullEvent = os.pullEventRaw
term.clear()
term.setCursorPos(1,1)
print("Checking for update. Please wait")
sleep(1)
shell.run("pastebin", "get", "CY7wfEmr", "Tempinfo")
d = fs.open("Tempinfo", "r")
version = d:readAll()
d:close()
f = fs.open("info", "r")
currentver = f:readAll()
f:close()
if currentver < version then
print("Please update your OS by running the update program!")
sleep(2)
fs.delete("Tempinfo")
else
print("You are up to date!")
fs.delete("Tempinfo")
sleep(2)
end
term.clear()
term.setCursorPos(1,1)
print("Welcome to DarkOS V2.0")
print("PLEASE MAKE AN ACCOUNT BEFORE LOGIN!")
print("What would you like to do?")
print("[1] Login")
print("[2] Shutdown")
print("[3] Install/Update")
print("[4] Make An Account")
write(": ")
local input = read()
if input == "2" then
os.shutdown()
elseif input == "3" then
term.clear()
term.setCursorPos(1,1)
print("What do you want to do?")
print("[1] Update?")
print("[2] Install DarkOS?")
write("> ")
local update = read()
if update == "2" then
term.clear()
term.setCursorPos(1,1)
print("Installing OS onto Computer please wait.")
sleep(3)
shell.run("pastebin", "get", "U3tw9zhg", "Home")
shell.run("pastebin", "get", "kk7Jyfr8", "Calculator")
shell.run("pastebin", "get", "u1zh1J6c", "Logout")
shell.run("pastebin", "get", "ZG6LaWC7", "info")
shell.run("pastebin", "get", "ztmsESQD", "update")
sleep(3)
print("Installation Complete!")
sleep(1)
print("Please make an account.")
sleep(3)
os.shutdown()
elseif update == "1" then
shell.run("update")
else
print("Unknown command please use 1-2 to select what you want to do.")
sleep(2)
shell.run("startup")
end
elseif input == "4" then
term.clear()
term.setCursorPos(1,1)
print("Please make a username.")
write("> ")
local new_user = read()
print("Please make a password.")
write("> ")
local new_pass = read()
local h = io.open(new_user, "w")
h:write(new_pass)
h:close()
print("Account Made. Please login at the login screen.")
sleep(2)
shell.run("startup")
elseif input == "1" then
term.clear()
term.setCursorPos(1,1)
write("Please Enter Username: ")
local username = read()
write("Please Enter Password: ")
local password = read("*")
f = fs.open(username, "r")
local contents = f:readAll()
f:close()
if password == contents then
shell.run("Home")
else
print("Incorrect!")
sleep(2)
os.reboot()
end
else
print("Please choose a number 1-4!")
sleep(2)
os.reboot()
end

