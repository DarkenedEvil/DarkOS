os.pullEvent = os.pullEventRaw
_G.shell = shell
os.loadAPI("apis/DOS")
term.clear()
term.setCursorPos(1,1)
print("Welcome to DarkOS V4.6")
print("What would you like to do?")
print("[1] Login")
print("[2] Shutdown")
write("> ")
local input = read()
if input == "2" then
	os.shutdown()
	elseif input == "1" then
	term.clear()
	term.setCursorPos(1,1) 
	print("Please enter your username.")
	write("> ")
	local username = read()
	print("Please enter your password.")
	write("> ")
	local password = read("*")
	DOS.login(username, password)
	else
	print("Please choose a number 1-2!")
	sleep(2)
	os.reboot()
	end