term.clear()
term.setCursorPos(1,1)
print("Welcome to DarkCalc V2")
print("This calculator can use up to 5 numbers to calculate")
sleep(3)
term.clear()
term.setCursorPos(1,1)
print("Please select amount of numbers you will be using.(2-5)")
write("> ")
local amount = read()
if amount == "2" then
term.clear()
term.setCursorPos(1,1)
print("Please select a function.(+,-,*,/)")
write("> ")
local func = read()
if func == "+" then
term.clear()
term.setCursorPos(1,1)
print("Please type your first number.")
write("> ")
local firstnum = read()
print("Please type you second number.")
write("> ")
local secnum = read()
term.clear()
term.setCursorPos(1,1)
print("Calculating.......")
answer = firstnum + secnum
sleep(2)
print("Your answer is".." "..answer)
sleep(3)
shell.run("Home")
elseif func == "-" then
term.clear()
term.setCursorPos(1,1)
print("Please type your first number.")
write("> ")
local firstnum = read()
print("Please type you second number.")
write("> ")
local secnum = read()
term.clear()
term.setCursorPos(1,1)
print("Calculating.......")
answer = firstnum - secnum
sleep(2)
print("Your answer is".." "..answer)
sleep(3)
shell.run("Home")
elseif func == "*" then
term.clear()
term.setCursorPos(1,1)
print("Please type your first number.")
write("> ")
local firstnum = read()
print("Please type you second number.")
write("> ")
local secnum = read()
